<%= form_with(model: todo, class: "todo-form") do |form| %>
  <% if todo.errors.any? %>
    <div class="form-errors">
      <h3><%= todo.errors.count %>件のエラーがあります：</h3>
      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "タイトル", class: "form-label" %>
    <%= form.text_field :title, class: "form-input", placeholder: "タスクのタイトルを入力", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, "説明", class: "form-label" %>
    <%= form.text_area :description, class: "form-textarea", placeholder: "詳細な説明（オプション）", rows: 4 %>
  </div>

  <div class="form-group form-checkbox-group">
    <%= form.check_box :completed, class: "form-checkbox" %>
    <%= form.label :completed, "完了済み", class: "form-checkbox-label" %>
  </div>

  <div class="form-actions">
    <%= form.submit todo.new_record? ? "タスクを作成" : "タスクを更新", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
